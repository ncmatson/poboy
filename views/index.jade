extends layout

block content
  h1= title
  p Welcome to #{title}

  form(action="/add_device", method="post")
    input(name="device[NAME]", type="textbox", placeholder="enter a device")
    input(name="device[STATUS]", type="radio", value="on")
    | on
    input(name="device[STATUS]", type="radio", value="off", checked)
    | off
    input(type="submit", value="Add Device")

  div
    h3 devices
    table(border="1")
      tr
        td Name
        td Status
      each dev in devices
        tr
          td #{dev.name}
          td #{dev.status}
